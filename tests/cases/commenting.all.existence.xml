<?xml version="1.0"?>
<ruleset name="commenting.all.without_tags">
  <autoload>../../src/autoloader.php</autoload>
  <file>../files/commenting/general</file>
  <rule ref="RN.Commenting.ConfigurableFileComment">
    <properties>
      <property name="requiredTags" value=""/>
      <property name="requireAuthorEmail" value="false"/>
    </properties>
  </rule>

  <rule ref="RN.Commenting.ConfigurableClassComment">
    <properties>
      <property name="requiredTags" value=""/>
    </properties>
  </rule>

  <rule ref="RN.Commenting.ConfigurableFunctionComment"/>

  <expectations>
    <file_count>3</file_count>
    <error file="commenting/general/WithComments.php" line="37">RN.Commenting.ConfigurableFunctionComment.Missing</error>
    <error file="commenting/general/WithoutComments.php" line="2">RN.Commenting.ConfigurableFileComment.Missing</error>
    <error file="commenting/general/WithoutComments.php" line="4">RN.Commenting.ConfigurableFunctionComment.Missing</error>
    <error file="commenting/general/WithoutComments.php" line="8">RN.Commenting.ConfigurableClassComment.Missing</error>
    <error file="commenting/general/WithoutComments.php" line="10">RN.Commenting.ConfigurableFunctionComment.Missing</error>
    <error file="commenting/general/WithoutComments.php" line="14">RN.Commenting.ConfigurableFunctionComment.Missing</error>
    <error file="commenting/general/WithoutComments.php" line="18">RN.Commenting.ConfigurableFunctionComment.Missing</error>
  </expectations>
</ruleset>
